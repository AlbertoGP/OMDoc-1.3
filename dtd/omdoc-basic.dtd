<!-- The default configuration for loading DTD modules -->
<!ENTITY % omdoc.mathml.module "INCLUDE">   <!-- MathML -->
<!ENTITY % omdoc.openmath.module "INCLUDE"> <!-- OpenMath -->
<!ENTITY % omdoc.rt.module "INCLUDE">       <!-- Rich Text Structure-->
<!ENTITY % omdoc.pres.module "IGNORE">     <!-- presentation -->
<!ENTITY % omdoc.ext.module "IGNORE">      <!-- web extensions -->
<!ENTITY % omdoc.pf.module "IGNORE">       <!-- proofs --> 
<!ENTITY % omdoc.st.module "IGNORE">       <!-- math statements -->
<!ENTITY % omdoc.adt.module "IGNORE">      <!-- Abstract Data Types -->
<!ENTITY % omdoc.cth.module "IGNORE">      <!-- complex theories -->
<!ENTITY % omdoc.dg.module "IGNORE">      <!-- development graphs -->
<!ENTITY % omdoc.quiz.module "IGNORE">     <!-- simple exercises --> 

<!-- after setting the switches, we load the general DTD -->
<!ENTITY % omdoc.dtd PUBLIC "-//OMDoc//DTD OMDoc V1.3//EN"
                            "omdoc.dtd">%omdoc.dtd;
